<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    app:cardElevation="4dp"
    android:background="@color/navback"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:background="#559EA7"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/imageViewCarLogo"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cropped_audi_logo"/>

        <ImageView
            android:id="@+id/imageViewCarImage"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/cropped_renault_car"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/dateborder"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="Araç Adı: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="2021-12-15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:text="Başlangıç Tarihi: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvStartDate"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="2021-12-15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="Bitiş Tarihi: "
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="2021-12-20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Rezervasyon Durumu: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvReservationStatus"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="Aktif"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="Plaka: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvLicensePlate"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="34ABC123"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="Ücret: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvCost"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="100₺"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
